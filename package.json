{
  "name": "storez",
  "version": "0.1.4",
  "description": "Svelte writable store with more.",
  "main": "src/storez.js",
  "scripts": {
    "pretest": "npm run lint",
    "test": "npm run test:jest --",
    "lint": "eslint . --cache --fix",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": ["storez", "svelte", "store", "writable store"],
  "author": "Pierre-Louis Renaudin",
  "repository": {
    "type": "git",
    "url": "https://github.com/plrenaudin/svelte-storez"
  },
  "license": "ISC",
  "dependencies": {
    "svelte": "^3.18.2"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "babel-jest": "^25.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ]
    ]
  }
}
