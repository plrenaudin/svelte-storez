{
  "name": "storez",
  "version": "0.3.14",
  "description": "Svelte writable store with more.",
  "main": "src/storez.js",
  "scripts": {
    "pretest": "npm run lint",
    "test": "npm run test:jest",
    "lint": "eslint . --cache --fix",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "storez",
    "svelte",
    "store",
    "writable store"
  ],
  "author": "Pierre-Louis Renaudin",
  "repository": {
    "type": "git",
    "url": "https://github.com/plrenaudin/svelte-storez"
  },
  "license": "ISC",
  "dependencies": {
    "svelte": "^3.42.6"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "babel-jest": "^27.2.1",
    "core-js": "^3.18.0",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^3.4.1",
    "husky": "^4.3.8",
    "jest": "^27.2.1",
    "lint-staged": "^10.5.4",
    "prettier": "1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "testEnvironment": "jsdom"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": "chrome >75"
        }
      ]
    ]
  }
}
